{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["es2015"],
    "baseUrl": "./",
    "rootDir": "./",
    "skipLibCheck": true
  },
  "include": [
    "./**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
